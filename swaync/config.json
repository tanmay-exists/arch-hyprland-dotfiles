{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  // "control-center-margin-top": 2,
  // "control-center-margin-bottom": 2,
  // "control-center-margin-right": 2,
  "control-center-width": 380,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 5,
  "scripts": {
    "notification": {
      "app-name": "^(?!.*(Spotify|Brave)).*$"
    }
  },
  "widgets": [
    "mpris",
    "title",
    "dnd",
    "buttons-grid",
    "volume",
    "backlight",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃠"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰖩",
          "command": "kitty --class nmtui-float -e nmtui"
        },
        {
          "label": "󰂯",
          "command": "kitty --class bluetuith-float -e bluetuith"
        },
        {
          "label": "󰐥",
          "command": "poweroff"
        },
        {
          "label": "󰜉",
          "command": "reboot"
        }
      ]
    }
  }
}
